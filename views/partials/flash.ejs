<% if (success && success.length) { %>
    <div class="container">
        <div class="alert alert-success alert-dismissible fade show col-md-8 offset-md-2 col-xl-6 offset-xl-3" role="alert">
            <%= success %> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="container">
        <div class="alert alert-danger alert-dismissible fade show col-md-8 offset-md-2 col-xl-6 offset-xl-3" role="alert">
            <%= error %> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>